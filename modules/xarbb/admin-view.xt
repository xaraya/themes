<div class="xar-mod-head">
    <h1><xar:mlstring>xarbb Module</xar:mlstring></h1>
</div>

<!-- common admin menu for this module - remove link to the current function -->
<div class="xar-mod-body">
 <xar:template type="module" file="admin-menu" />
    <h2><xar:mlstring>Manage Forums</xar:mlstring></h2>

    <xar:if condition="!$isforums">
        <p>
            <xar:mlstring>There are no forums currently registered.</xar:mlstring>
            <a href="#$addforum#">
                <xar:mlstring>Please click here to add a forum.</xar:mlstring>
            </a>
        </p>
    <xar:else />
        <xar:template file="navtabs" type="module" />

        <xar:if condition="xarSessionGetVar('statusmsg') ne ''">
            <p class="xar-form-input-wrapper-after xar-error">#xarSessionGetVar('statusmsg')#</p>
        </xar:if>
        <xar:set name="dummy">xarSessionSetVar('statusmsg','')</xar:set>

        <p>
            <a href="#$addforum#"><xar:mlstring>Add a forum</xar:mlstring></a>
        </p>
    </xar:if>

</div>