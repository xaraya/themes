<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">

<div id="main_right">

    <xar:if condition="!empty($side_group_name)">
        <xar:blockgroup name="$side_group_name" />
    </xar:if>
</div>
<div id="main_left">
    <h1>#$current_page.desc#</h1>    

    <xar:if condition="!empty($current_page['dd']['intro'])">
        <div>
            #$current_page.dd.intro#
        </div>
    </xar:if>


</div>


</xar:template>