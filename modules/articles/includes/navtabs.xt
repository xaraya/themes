<xar:if condition="xarTplAddStyleLink('base', 'navtabs')">
</xar:if>
<dl class="xar-tabs">
    <dt class="help">
        <xar:mlstring>
            Select Publication 
        </xar:mlstring>
        : 
    </dt>
    <xar:foreach in="$pubfilters" value="$pubfilter">
        <xar:if condition="empty($pubfilter['plink'])">
            <dd class="active">
                <a href="#xarServerGetCurrentURL()#" title="#$pubfilter['ptitle']#">
                    #$pubfilter['ptitle']# 
                </a>
            </dd>
            <xar:else />
            <dd>
                <a href="#$pubfilter['plink']#" title="#$pubfilter['ptitle']#">
                    #$pubfilter['ptitle']# 
                </a>
            </dd>
        </xar:if>
    </xar:foreach>
</dl>