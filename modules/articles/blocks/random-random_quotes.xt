<xar:foreach in="$items" value="$item"><xar:comment > this is where the title was </xar:comment>    <xar:if condition="!empty($showsummary) and !empty($item['summary'])">        <div class="quote_summary">            "#$item['summary']#"        </div>    </xar:if>    <xar:if condition="!empty($showtitle)">        <xar:if condition="isset($linkpubtype)">            <div class="quote_title"> -- #$item['title']#</div>        </xar:if>    </xar:if>    <xar:if condition="!empty($showauthor)">        <p>            #$item['authorname']#        </p>    </xar:if>    <xar:if condition="!empty($showpubdate)">        <p>            #xarLocaleGetFormattedDate('medium',$item['pubdate'])#        </p>    </xar:if></xar:foreach><xar:if condition="!empty($showsubmit)">    <div>        <a href="#xarModURL('articles', 'admin', 'new', array('ptid' => $pubtypeid))#"><xar:mlstring>Submit new</xar:mlstring></a>    </div></xar:if><xar:comment> DD are configurable in block configuration</xar:comment>