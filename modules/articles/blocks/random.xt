<xar:if condition="!empty($altsummary)">    #$altsummary#</xar:if><xar:foreach in="$items" value="$item">    <xar:if condition="!empty($showtitle)">        <xar:if condition="isset($linkpubtype)">            <img src="#xarTplGetThemeDir()#/images/iPage.png" style="float: left; margin-right: 2px;" alt="" /><div style="font-weight: bold;"><a href="#xarModURL('articles', 'user', 'display', array('aid' => $item['aid'], 'itemtype' => $item['pubtypeid']))#">#$item['title']#</a></div>        <xar:else />            <a href="#xarModURL('articles', 'user', 'display', array('aid' => $item['aid']))#">#$item['title']#</a>        </xar:if>    </xar:if>    <xar:if condition="!empty($showsummary) and !empty($item['summary'])">        <div style="padding: 5px; margin-bottom: 5px;">#$item['summary']#</div>    </xar:if>    <xar:if condition="!empty($showauthor)">        <p>#$item['authorname']#</p>    </xar:if>    <xar:if condition="!empty($showpubdate)">        <p>#xarLocaleGetFormattedDate('medium',$item['pubdate'])#</p>    </xar:if></xar:foreach><xar:if condition="!empty($showsubmit)">    <div>        <a href="#xarModURL('articles', 'admin', 'new', array('ptid' => $pubtypeid))#"><xar:mlstring>Submit new</xar:mlstring></a>    </div></xar:if><xar:comment> DD are configurable in block configuration</xar:comment>