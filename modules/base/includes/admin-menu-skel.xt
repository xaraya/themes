<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <!-- Common Menu -->
    <xar:if condition="xarModVars::get('themes','adminpagemenu')">
        <xar:if condition="!isset($xmldata)">
            <xar:set name="xmldata">''</xar:set>
        </xar:if>
        <xar:if condition="!isset($phpdata)">
            <xar:set name="phpdata">''</xar:set>
        </xar:if>
        <xar:if condition="!isset($urlargs)">
            <xar:set name="urlargs">array()</xar:set>
        </xar:if>
        <!-- loadmenuarray function does all the hard work for us :) -->
        <xar:set name="navitems">xarMod::apiFunc('base', 'admin', 'loadmenuarray', array('layout' => 'tabs', 'xmldata' => $xmldata, 'phpdata' => $phpdata, 'urlargs' => $urlargs))</xar:set>
        <!-- only display if we found some links -->
        <xar:if condition="!empty($navitems['menulinks'])">
            <ul class="xar-tabs xar-nav xar-nav-tabs xar-alt xar-norm-outline">
                <xar:if condition="!empty($navitems['title'])">
                    <li class="xar-tabs-label" title="#$navitems.title#">#$navitems.label#:</li>
                <xar:else/>
                    <li class="xar-tabs-label">#$navitems.label#:</li>
                </xar:if>
                
                <xar:foreach in="$navitems['menulinks']" value="$navitem">
                    <xar:if condition="isset($navitem['value']) AND !empty($navitems['variable'])">
                        <xar:set name="variable">$navitems['variable']</xar:set>
                        <xar:if condition="$navitem['value'] eq ${$variable}">
                            <xar:set name="tabclass">'xar-active'</xar:set>
                            <xar:set name="linkclass">'xar-accent xar-accent-outline'</xar:set>
                        <xar:else />
                            <xar:set name="tabclass">''</xar:set>
                            <xar:set name="linkclass">'xar-norm xar-norm-outline'</xar:set>
                        </xar:if>
                    <xar:else />
                        <xar:if condition="!empty($navitem['isactive'])">
                            <xar:set name="tabclass">'xar-active'</xar:set>
                            <xar:set name="linkclass">'xar-accent xar-accent-outline'</xar:set>
                        <xar:else />
                            <xar:set name="tabclass">''</xar:set>
                            <xar:set name="linkclass">'xar-norm xar-norm-outline'</xar:set>
                        </xar:if>
                    </xar:if>
                    <li class="#$tabclass#">
                        <xar:if condition="!empty($navitem['url'])">
                            <a href="#$navitem['url']#" class="#$linkclass#" title="#$navitem['title']#">
                                #$navitem['label']#
                            </a>
                        <xar:else/>
                            <a class="#$linkclass#" title="#$navitem['title']#">
                                #$navitem['label']#
                            </a>
                        </xar:if>
                    </li>
                </xar:foreach>
            </ul>
        </xar:if>
    </xar:if>
</xar:template>