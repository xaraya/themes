<div class="xar-mod-head"><span class="xar-mod-title"><xar:mlstring>Newsgroups</xar:mlstring></span></div>
<!-- common admin menu for this module - remove link to the current function -->
<div class="xar-mod-body">

<h2><xar:mlstring>Post to</xar:mlstring> #$group#</h2>

<xar:if condition="isset($error_message)">
    <p> <xar:mlstring>News Server Error:</xar:mlstring>
        <span style="color: red;">
            #$error_message#
        </span>
    </p>
<xar:else />

<form method="post" action="#xarModURL('newsgroups', 'user', 'post', array('phase' => 'update'))#" enctype="application/x-www-form-urlencoded">
<table>
    <tr>
        <td align="right">
            <b>Subject:</b> 
        </td>
        <td>
            <input type="text" name="subject" value="#$subject#" size="40" maxlength="80" />
        </td>
    </tr>
    <tr>
        <td align="right">
            <b>Name:</b>
        </td>
        <td align="left">
            <input type="text" name="name" value="#$name#" size="40" maxlength="40" />
        </td>
    </tr>
    <tr>
        <td align="right">
            <b>eMail:</b>
        </td>
        <td align="left">
            <input type="text" name="email" value="#$email#" size="40" maxlength="40" />
        </td>
    </tr>
</table>
<table>
    <tr>
        <td>
            <b>Message</b>
        <br />
            <textarea name="body" rows="20" cols="79" >#xarVarPrepEmailDisplay(xarVarPrepForDisplay($message))#</textarea>
        </td>
    </tr>
</table>
<p>
    <input type="hidden" name="authid" id="authid" value="#$authid#" />
    <input type="hidden" name="group" id="group" value="#$group#" />
    <input type="hidden" name="reference" value="#xarVarPrepForDisplay($reference)#" />
    <input type="submit" value="New Topic" />
</p>
</form>
</xar:if>
</div>
