                #xarModGetVar('themes', 'SiteSlogan')#
            </div>
            <div id="midmenu">
		        <ul>
                    <li id="search">
                        <xar:mlstring>
                            Search
                        </xar:mlstring>:
                        <ul>
                            <li>
                                <form id="searchform" method="get" action="#xarModUrl('search', 'user', 'main')#">
                                <input type="text" name="q" id="q" size="15" />
                                <input type="submit" value="go" />
                                </form>
                            </li>
                        </ul>
                    </li>
					<li>
                        <xar:mlstring>
                            Meta
                        </xar:mlstring>
                        <ul>
        					<li>
                                <a href="http://validator.w3.org/check/referer" title="#xarML('This page validates as XHTML 1.0 Transitional')#">
