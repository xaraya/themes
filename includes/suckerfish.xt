<script type="text/javascript">

jQuery(document).ready(function(){
    jQuery("ul#navbar_core > li").hover(
        function(){
        	jQuery(this).children('a').toggleClass('navbar-on').end().find('div').animate({ height: 'show'}, 'normal');
        }, 
        function() {
        	jQuery(this).children('a').toggleClass('navbar-on').end().find('div').animate({ height: 'hide'}, 'fast');
        }
    );
});

</script>
