<div class="rightblock_wrapper">
    <xar:if id="title_condition" condition="!empty($title)">
      <div class="rightblock_head">
        <div class="rightblock_title">
            <xar:var name="title" prep="false"/>
            <xar:sec mask="AdminPanel" catch="false">
            <span class="xar-sub">
                <a href="#xarModURL('blocks','admin','modify_instance', array('bid' => $bid))#">
                <img src="#xarTplGetImage('edit.gif','categories')#" alt="edit" />                
                </a> (right)
            </span> 
            </xar:sec>        
        </div>
      </div>
    </xar:if>
    <div class="rightblock_body">
      <xar:var name="content" prep="false"/>
    </div>
    <div class="rightblock_foot"></div>
</div>